{
  "include": ["lib/"],
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react-native",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2015", "es2016", "esnext"],
    "resolveJsonModule": true,
    "outDir": "./dist/",
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
